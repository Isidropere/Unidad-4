@model IEnumerable<Iperez_MVC_ActionLink_DiplomadoUASD.Models.Proveedore>

@{
    ViewBag.Title = "Index";
}

<h2>Proveedor</h2>

<p>
    @Html.ActionLink("Crear Nuevo Proveedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
